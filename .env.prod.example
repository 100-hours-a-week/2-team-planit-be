# App image
APP_IMAGE=your-registry/planit-be:1.0.0

# Spring profile
SPRING_PROFILES_ACTIVE=prod

# External database
SPRING_DATASOURCE_URL=jdbc:mysql://your-db-host:3306/planit?useSSL=true&serverTimezone=Asia/Seoul
SPRING_DATASOURCE_USERNAME=planit
SPRING_DATASOURCE_PASSWORD=change-me

# JWT (Base64-encoded secret, 256-bit+)
JWT_SECRET=change-me

# AWS / S3
AWS_S3_BUCKET=your-bucket
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=change-me
AWS_SECRET_ACCESS_KEY=change-me

# Optional CDN
CLOUDFRONT_DOMAIN=
